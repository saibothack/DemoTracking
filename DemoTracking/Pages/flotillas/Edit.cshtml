@page
@model DemoTracking.Pages.flotillas.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<h4>Flotilla</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Flotilla.Name" class="control-label"></label>
                <input asp-for="Flotilla.Name" class="form-control" />
                <span asp-validation-for="Flotilla.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Flotilla.CompanyID" class="control-label"></label>
                <select asp-for="Flotilla.CompanyID" class="form-control" asp-items="ViewBag.CompanyID"></select>
                <span asp-validation-for="Flotilla.CompanyID" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Flotilla.id" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
