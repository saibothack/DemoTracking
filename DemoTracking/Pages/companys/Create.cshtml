@page
@model DemoTracking.Pages.companys.CreateModel

@{
    ViewData["Title"] = "Crear";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<h4>Empresa</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Company.Name" class="control-label"></label>
                <input asp-for="Company.Name" class="form-control" />
                <span asp-validation-for="Company.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Company.RFC" class="control-label"></label>
                <input asp-for="Company.RFC" class="form-control" />
                <span asp-validation-for="Company.RFC" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Company.Status" class="control-label"></label>
                <select asp-for="Company.Status" class="form-control" asp-items="ViewBag.CompanyStatus"></select>
                <span asp-validation-for="Company.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
